<%- include('include/header'); %>
<title>Aplikasi</title>
<body>
    <% if(message){ %>
        <div style="text-align: center" class="alert alert-<%= message.type %>">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <strong><%= message.intro %></strong> <%= message.message %>
        </div>
      <% } %>       
      <h1>Silahkan Lakukan Pembayaran Pemesanan Tempat dalam waktu 15 menit</h1>                   
      <button type="button" class="btn btn-outline-warning" data-toggle="modal" data-target="#order" data-idne="<%= data.id_pesan %>"><i class="far fa-edit"></i>Konfirmasi Dan Lanjutkan</button>

      <div class="modal fade" id="order" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="label">Edit Warung  </h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <form action="/bayar/<%= data.id_pesan %>" method="POST">
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Masukan Tanggal Anda Pesan</label>                        
                        <input type="date" name="tanggal" class="form-control" id="recipient-name" placeholder="...">
                    </div>
                    <div class="form-group">
                        <label>Masukan jam</label>
                        <input type="time" name="jam" class="form-control" placeholder="...">
                    </div>                     
                    <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                    <input type="submit" class="btn btn-warning" value="Daftar">
                    </div>
              </form>
            </div>
          </div>
        </div>
      </div>      